
<h1> Add a New Task</h1>  
<div class="row">
  <div class="col-md-12">
    <div>
      <%= form_for @todo, html: {class: 'form-inline'} do |f| %>
        <div class="form-group">
          <%= f.label :description, class: 'sr-only' %>
          <%= f.text_field :description, class: 'form-control', placeholder: 'Description' %><br />
        </div>
        <div class="form-group">
          <%= f.submit 'Save', onclick: 'sendEventData();', class: "btn btn-success", return: true %>
        </div>
      <% end %>
    </div>


<h1> Existing Tasks</h1>  

<div class="panel panel-default">

      <div class="Panel-body">
        <table class="table">
          <thead class="text-center">
            <tr>
              <th>Description</th>
              <th>Days left</th>
              <th>Completed</th>
              <th>Delete Task </th>
            </tr>
          </thead>
          <tfoot>
            <tr>
            </tr>
            <tbody>
              <%= render partial: 'todo', collection: @todos %>
          </tbody>
        </table>
      </div>
    </div>

  