<% if @todo.errors %>
  <p><%= @todo.errors.messages.first %></p>
<% end %>

<%= form_group_tag(todo.errors[:description]) do %>
  <div class="form-group">
    <%= f.text_field :description, placeholder: 'Add your Todo here' %>
  </div>
  <div class="form-group">
    <%= f.submit 'Save', class: "btn btn-success" %>
  </div>
<% end %>